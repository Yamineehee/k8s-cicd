<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - Student Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="fas fa-graduation-cap"></i> Student Dashboard</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
                <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <% if (messages.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages.success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="fas fa-search"></i> Search Results for "<%= query %>"</h2>
            <a href="/" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
        </div>

        <% if (students.length === 0) { %>
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No students found matching "<%= query %>".
            </div>
        <% } else { %>
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-list"></i> Found <%= students.length %> student(s)</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Grade</th>
                                    <th>Subject</th>
                                    <th>Email</th>
                                    <th>Enrollment Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% students.forEach(student => { %>
                                    <tr>
                                        <td><%= student.name %></td>
                                        <td>
                                            <span class="badge bg-<%= student.grade === 'A' ? 'success' : student.grade === 'B' ? 'primary' : student.grade === 'C' ? 'warning' : 'danger' %>">
                                                <%= student.grade %>
                                            </span>
                                        </td>
                                        <td><%= student.subject %></td>
                                        <td><%= student.email %></td>
                                        <td><%= new Date(student.enrollmentDate).toLocaleDateString() %></td>
                                        <td>
                                            <a href="/edit/<%= student._id %>" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></a>
                                            <form action="/delete/<%= student._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
